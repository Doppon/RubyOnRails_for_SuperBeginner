<h1>Bloggenres#add</h1>
<p>ジャンル・データの作成画面</p>
<% if @bloggenre.errors.any? %>
<ul>
  <% @bloggenre.errors.fullmessages.each do |err| %>
    <li><%= err %></li>
  <% end %>
</ul>
<% end %>
<table>
  <%= form_for( @bloggenre, url:{ controller: 'bloggenres', action: 'add' } ) do |f| %>
  <tr>
    <th>Name</th>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <th>Memo</th>
    <td><%= f.text_field :memo %></td>
  </tr>
  <tr>
    <th></th>
    <td><%= f.submit "作成！" %></td>
  </tr>
  <% end %>
</table>

<p><a href = "/bloggenres"><<一覧ページ</a></p>
