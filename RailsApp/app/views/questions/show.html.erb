<p id="notice"><%= notice %></p>

<h1>質問と回答</h1>

<div class="question">
  <h2 class="title">
    <%= @question.title %>
  </h2>

  <p class="content">
    <%= @question.content %>
  </p>

  <p class="q_name">
    <%= @question.name %>
  </p>

  <span class="<%= @question.finished ? 'finished' : 'not_finished'%>">
    <%= @question.finished ? '終了' : '受付中' %>
  </span>
</div>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
