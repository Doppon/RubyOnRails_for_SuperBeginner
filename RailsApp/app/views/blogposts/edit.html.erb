<h1>Blogposts#edit</h1>
<p>「<%= @blogpost.title %>」の編集画面</p>
<% if @blogpost.errors.any? %>
<ul>
  <% @blogpost.errors.fullmessages.each do |err| %>
    <li><%= err %></li>
  <% end %>
</ul>
<% end %>
<table>
  <%= form_for( @blogpost, url:{ controller: 'blogposts', action: 'add' } ) do |f| %>
  <tr>
    <th>Name</th>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <th>Memo</th>
    <td><%= f.text_field :read %></td>
  </tr>
  <tr>
    <th>Message</th>
    <td><%= f.text_area :content, { cols:40, rows:10 } %></td>
  </tr>
  <tr>
    <th>Genre ID</th>
    <td><%= f.text_field :bloggenre_id %></td>
  </tr>
  <tr>
    <th></th>
    <td><%= f.submit "更新！" %></td>
  </tr>
  <% end %>
</table>
<hr>
<p>ジャンルの一覧</p>
<table>
  <tr>
    <th>Id</th>
    <th>Genre</th>
  </tr>
  <% @genres.each do |obj| %>
  <tr>
    <th><% obj.id %></th>
    <th><% obj.name %></th>
  </tr>
  <% end %>
</table>
<p><a href = "/blogposts"><<一覧ページ</a></p>
